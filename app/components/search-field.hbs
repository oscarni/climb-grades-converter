<Input
  @type="text"
  @value={{this.inputValue}}
  class="search-field"
  {{on "input" this.resetGradeSystem}}
/>
<div>
  {{#if this.hasManyGradeSystems}}
    {{#if this.selectedGradeSystem}}
      Selected
      <button class="grade-button current-grade" type="button">
        {{this.gradeSystem}}
      </button>.
    {{else}}
      Recognizing
      <button
        class="grade-button current-grade"
        type="button"
        {{on "click" (fn this.setGradeSystem this.gradeSystem)}}
      >
        {{this.gradeSystem}}
      </button>.
    {{/if}}
    Change to
    {{#each this.selectableGradeSystems as |gradeSystem|}}
      <button
        class="grade-button"
        type="button"
        {{on "click" (fn this.setGradeSystem gradeSystem)}}
      >
        {{gradeSystem}}
      </button>{{/each}}?
  {{else}}
    {{#if (and this.gradeSystem this.inputValue this.parsedGrade)}}
      Recognizing
      <button class="grade-button current-grade" type="button"s>
        {{this.gradeSystem}}
      </button>.
    {{else}}

    {{/if}}
  {{/if}}

